<!-- show messages before the content -->

<div class="row">
  [% PROCESS 'message_box.tt' %]
</div>
<div class="row">
  [% IF page.toolbar -%]
  <div class="pull-left"><h1>[% title %]</h1></div>
  <div class="pull-right">[% page.toolbar %]</div>
  [% ELSE -%]
  [% bootstrap_pagetitle(title) %]	
  [% END -%]
</div>
<div class="row">
  <div id="content">[% content %]</div><!-- end of content -->
</div>
