[% META
   section='Asset'
   subsection='Device'
   title='Interface View'
   use_table=1
-%]

<div id="tabs">	
  <ul>
     <li><a href="#tabs-1">Interface info</a></li>
     <li><a href="#tabs-2">Mac Address History</a></li>
 </ul>

<div id="tabs-1">
<table id="info">
<tr>
  <td>Interface:</td><td>[% object.interface | html %] </td>
</tr>
<tr>
  <td>Switch:</td><td>[% device.name | html %]
   ([% print_device(device) %])</td>
</tr>
<tr>
  <td>Switch Model:</td><td>[% device.model | html %]</td>
</tr>
<tr>
  <td>Switch Location:</td>
  <td>Building [% device.rack.building.name %] ( [%
  device.rack.building.description | html  %] ), Rack [% device.rack.name %]</td>
<tr>
  <td>Description:</td><td>[% object.description | html  %] </td>
</tr>
<tr>
  <td>Status (admin):</td>
  <td>
    [% object.up | html %] ([% object.up_admin %])	
  </td>
</tr>
<tr>
  <td>Duplex (admin):</td>
  <td>
	[% object.duplex | html %]([% object.duplex_admin %])
  </td>
</tr>
<tr>
  <td>Vlan:</td>
  <td>
      [% object.vlan | html %]
  </td>
</tr>
<tr>
  <td>STP Status</td>
  <td> [% object.stp_state | html %] </td>
</tr>
<tr>
  <td>Portsecurity:</td>
  <td>
    [% IF object.cps_enable %]
	[% object.cps_status | html %] -
        [% object.cps_count | html %] violations
    [% ELSE %]
    Disabled
    [% END %]
  </td>
</tr>
<tr> 
  <td>Notes: </td>
  <td>[% notes | html %]</td>
</tr>
</table>
[% add_css_tableinfo %]
<div class="buttons">	
[% IF notes=='' %]
   <a href="[% c.uri_for_action
   ('interface/edit_notes', [object.device, object.interface])%]">
   [% ui_icon('plusthick') %] Add a Note</a>
[% ELSE %]
<a href="[% c.uri_for_action
   ('interface/edit_notes', [object.device, object.interface])%]">Edit Note</a>
<a href="[% c.uri_for_action
   ('interface/delete_notes', [object.device, object.interface])%]">Delete Note </a> 
[% END %]
</div>

</div>  <!-- end tabs-1 -->

<div id="tabs-2">

[% FOREACH m IN mat_results %]
   [% IF loop.first %]
     [% init_table('mat',undef, {sortby=>3,order=>'desc'}) %]
        <table class="display"  id="mat">
      <thead>  
         <tr>
 	 <th>Mac Address</th>
 	 <th>Vlan</th>
 	 <th>From</th>
	 <th>To</th>
         </tr>
      </thead>  
      <tbody>
  [% END %]
         <tr>
 	 <td> <a href="[% c.uri_for('/mac',m.macaddr) %]">[% m.macaddr %]</a></td>
 	 <td> [% print_vlan(m.vlan,m.vlan) %]     </td>
 	 <td> [% m.firstseen | html %]</td>
	 <td> [% m.lastseen  | html %]</td>
         </tr>
  [% IF loop.last %]
      </tbody>
    </table>
  [% END %]
[% END %]

</div> <!-- end tabs-2 -->

<div> <!-- end tabs -->
