[%-
dock_sections = [
		 {
		     name = 'About',
     		     path = c.uri_for('/about'),
 		 },
		 {
		     name = 'Logout',
     		     path = c.uri_for('/auth/logout'),
 		 },
		 ]
-%]
[% MACRO menu_panel BLOCK -%]
[% FOREACH s IN menu_sections %]
<h3 [% "class=\"panel-selected\"" IF s.name == template.section %]>[% s.name %]</h3>
<div>
<ul class="menu">
   [% FOREACH i IN s.subsections %]
   <li [% "class=\"selected\"" IF i.name == template.subsection %]>
     <a href="[% i.path %]">[% i.name %]</a>
   </li>
   [% END -%]
</ul>
</div>
[% END -%]
[% END -%]
[% MACRO dock_menu BLOCK -%]
<ul>
[% FOREACH s IN dock_sections %]
   <li><a href="[% s.path %]">[% s.name %]</a></li>
[% END -%]
</ul>
[% END -%]
[% MACRO menu_js BLOCK -%]
$(function() {
  $("#panel").accordion({
	     heightStyle: "content",
	     collapsible: true,
	     active: $('.panel-selected').index() / 2,
	     } );
});
[% END -%]
[% MACRO breadcrumbs BLOCK %]
<div id="breadcrumbs" class="ui-widget float-container">
<ul>
[% FOREACH s IN menu_sections %]
  [% IF s.name == template.section -%]
  <li><a href="[% s.path %]">[% s.name %]</a><i class="ui-icon ui-icon-triangle-1-e"></i></li>
    [% FOREACH i IN s.subsections %]
       [% IF i.name == template.subsection -%]
  <li><a href="[% i.path %]">[% i.name %]</a><i class="ui-icon ui-icon-triangle-1-e"></i></li>
       [% END -%]
    [% END -%]
  [% END -%]
[% END -%]
  <li><a href="#">[% template.title %]</a></span></li>
</ul>
</div>
[% END -%]
